<%= form_for (@area) do |f| %>
  <% if @area.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@area.errors.count, "error") %> prohibited this area from being saved:</h2>

      <ul>
      <% @area.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <%= f.hidden_field :city, :value => @area.city %>
  <%= f.hidden_field :state, :value => @area.state %>
  <%= f.hidden_field :the_geom, :value => @area.the_geom %>


    <div id = "edit-instructions" class = "row-fluid">
      <span class = "span8 offset2">
      
          <p>
          Edit the area below by dragging any of the points to a new location. To remove a point, right-click on it. When you are finished, click on 'Update Area'.  
          </p>
        </span>
    </div>

     <%= content_tag :div, :id => 'map', :class=>'editable-map', :data =>{:map_id=>@area.id, :state =>@state, :city => @city} do %>
        <div id = "map-canvas">
        </div>
      <%end%>

