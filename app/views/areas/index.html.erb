<div id = "areas-container" class = "container-fluid no-padding">
    <h1>
      The best area to stay in 
      <span id = "city-name"><%= @city %></span> 
      is 
    </h1>
 
    <%= render 'list' %>

    <%= content_tag :div, :id => 'map', :data => {:id => @area.id, :state => @state, :city => @city} do %>
        <div id = "map-canvas">
        </div>
      <%end%>

    <div id = "area-info" class = "row-fluid">
      <div id="area-description" class="row-fluid span6 offset3">
        <h2>About The Area</h2>
        <p>
          <%= @area.description %>
        </p>
      </div>
      <div id = "area-photographs" class = "row-fluid">
      </div>
      <div id = "area-accomodations" class = "row-fluid">
        <h2> Places To Stay </h2>
      </div>
      <div id = "area-transportation" class = "row-fluid">
        <h2> Getting Around </h2>
      </div>
      
    </div>

    <div class="modal hide" id="modal-login">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">Ã—</button>
        <h3>Please Sign in to vote.</h3>
      </div>
      <div class="modal-body">
        <%= render 'users/sessions/modal_login' %>
      </div>
    </div>
 </div>

