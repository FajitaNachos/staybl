  <div id = "areas">
    <%if @areas.any? %>
      <ul id="area-list">
      <%= content_tag :li, :id => @primary_area.name, :class=> 'primary', :data => {:id=>@primary_area.id, :position=>0} do %>
      
            <%= render :partial =>'areas/area', :locals => { :area => @primary_area, :primary => true }%>
        
      <% end %>
        <%if @secondary_areas.any? %>
          <% @secondary_areas.each.with_index(1) do |area, index| %>
            <%= content_tag :li, :id => area.name, :class=> 'secondary', :data => {:id=>area.id, :position=> index} do %>
             
               <%= render :partial => 'areas/area', :locals => { :area => area, :primary => false } %>
           
          <% end %>
        <% end %>
      </ul>
      <li class='center add-area'><%= link_to "new area" ,new_area_path(:city => @city) %></li>
          
          <div class="row-fluid">
            <span id = "show-more" class="span3 offset9">see more areas</span>
          </div>
        <%else%>
          <li class='center add-area'><%= link_to "Suggest an area" ,new_area_path(:city => @city) %></li>
        <%end%>
  <%else%>
    <div class='primary'>
      <li><h2>still up for grabs</h2></li>
      <li class='center first-area'><%= link_to "Be the first to suggest an area" ,new_area_path(:city => @city) %></li>
    </div>
  <%end%>
</div>
  
