
  <div id = "areas">
    <%if @area %>
      <ul id="area-list">
      <%= content_tag :li, :id => @area.name, :class=> 'primary', :data => {:id=>@area.id, :position=>0, :votes => @area.plusminus} do %>
          <div id = "votes" class="votes">
            <%= render :partial =>'areas/votes', :locals => { :area => @area, :primary => true }%>
          </div>
      <% end %>
        <%if @areas.any? %>
          <% @areas.each.with_index(1) do |area, index| %>
            <%= content_tag :li, :id => area.name, :class=> 'secondary', :data => {:id=>area.id, :position=> index, :votes => area.plusminus} do %>
              <div id ="votes" class="votes">
               <%= render :partial => 'areas/votes', :locals => { :area => area, :primary => false } %>
             </div>
          <% end %>
        <% end %>
      </ul>
      <li class='center add-area'><%= link_to "new area" ,new_area_path(:city => @city) %></li>
          
          <div class="row-fluid">
            <span id = "show-more" class="span3 offset9">see more areas</span>
          </div>
        <%else%>
          <li class='center add-area'><%= link_to "Suggest an area" ,new_area_path(:city => @city) %></li>
        <%end%>
  <%else%>
    <div class='primary'>
      <li><h2>still up for grabs</h2></li>
      <li class='center first-area'><%= link_to "Be the first to suggest an area" ,new_area_path(:city => @city) %></li>
    </div>
  <%end%>
</div>
  
