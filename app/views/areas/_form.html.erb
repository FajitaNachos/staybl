<%= form_for(@area) do |f| %>
  <% if @area.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@area.errors.count, "error") %> prohibited this area from being saved:</h2>

      <ul>
      <% @area.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @area.city %>
    <%= f.hidden_field :city, :value => @area.city %>
  <% else %>
    <%= f.hidden_field :city, :value => @city %>

  <% end %>
  <%= f.hidden_field :state, :value => @state %>
  <%= f.hidden_field :the_geom %>

  <% if @area.name.nil? %>
    <div id = "new_area_name" class="row-fluid">
         <span class="span8 offset2">
            <h2> Area Name</h2>
            <%= f.text_field :name, :placeholder => " " %>
        </span>
    </div>
  <%end%>
  

      <div id = "edit-instructions" class = "row-fluid">
      <span class = "span8 offset2">
          <h2> Area Map </h2>
          <p>
          Edit the area below by dragging any of the points to a new location. To remove a point, right-click on it. When you are finished, click on 'Save Area'.  
          </p>
        </span>
    </div>
     <div id = "new-instructions" class = "row-fluid">
      <span class = "span8 offset2">
          <h2> Area Map </h2>
          <p>
          Help us put this area on the map. First, find the area on the map that you would like to highlight. Then click on Start Drawing in the top right corner. Now, click on the map to add your first point. You can add as many or as few points as you like, as long as the area is fully outlined when you are done. 
          </p>
        </span>
    </div>
     <%= content_tag :div, :id => 'map', :class=>'editable-map', :data =>{:id=>@area.id, :state =>@state, :city => @city} do %>
        <div id = "map-canvas">
        </div>
      <%end%>

    <div class= "row-fluid">
        <span class="span8 offset2">
            <h2> About the Area (Optional)</h2>
            <p>
              Here you can share your knowledge of the area. We depend on both locals and frequent visitors to help us find the best areas to stay. We'll use your input to help build a comprehensive guide of the best areas to stay in <%= @city %>.  
            </p>
          <%= f.text_area :description, :placeholder => " " %>
        </span>
    </div>
  

  <div class="row-fluid">
    <div class="actions center area-submit">
        <%= f.submit(:value => 'Save This Area', :class=>'btn btn-large') %>
    </div>
  </div>

<% end %>
