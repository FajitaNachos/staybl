<%= form_for(@area) do |f| %>
  <% if @area.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@area.errors.count, "error") %> prohibited this area from being saved:</h2>

      <ul>
      <% @area.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @area.city %>
    <%= f.hidden_field :city, :value => @area.city %>
  <% else %>
    <%= f.hidden_field :city, :value => @city %>
  <% end %>

  <%= f.hidden_field :the_geom %>

  <% if @area.name.nil? %>
    <div class="row-fluid select-area">
      <div class = "form-element">
        <% if @select_list %>
        <%= f.select :id, options_for_select(@select_list), :prompt => "Choose an area" %>
        <% end%>
         <span id="new_area_name" class="hide">
            <h3> Suggest a new area to stay </h3>
          <%= f.text_field :name, :placeholder => " " %>
        </span>
      </div>
     
    </div>
  <%end%>
  <div id = "instructions" class = "row-fluid">
    <span class = "span6 offset3">
        <p>
        Help us improve our area maps by dragging the points on the map below to the correct positions. You can also remove points by right clicking on them. 
        </p>
      </span>
  </div>
  <div class="row-fluid">
     <%= content_tag :div, :id => 'map', :class=>'editable-map', :data =>{:id=>@area.id, :state =>@state, :city => @city} do %>
        <div id = "map-canvas">
        </div>
      <%end%>
 </div>
  

  <div class="row-fluid">
    <div class="actions center area-submit">
       <%= link_to 'Go Back', areas_path(@state, @city), :id => 'return-area',:method => :get, :class=>'btn btn-large' %>
        <%= f.submit(:value => 'Recommend This Area', :class=>'btn btn-large') %>

    </div>
  </div>

<% end %>
