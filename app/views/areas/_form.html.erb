<%= form_for(@area) do |f| %>
  <% if @area.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@area.errors.count, "error") %> prohibited this area from being saved:</h2>

      <ul>
      <% @area.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @area.city %>
    <%= f.hidden_field :city, :value => @area.city %>
  <% else %>
    <%= f.hidden_field :city, :value => @city %>
  <% end %>

  <%= f.hidden_field :the_geom %>

  <% if @area.name.nil? %>
    <div class="row-fluid">
      <div class = "form-element">
        <%= f.label :area_name %>
        <%= f.select :id, options_for_select(@select_list) %>
         <span id="new_area_name" class="hide">
          <%= f.text_field :name, :placeholder => "Enter a name for the area" %>
        </span>
      </div>
     
    </div>
  <%end%>

  <div class = "row-fluid">
    <div class = "form-element">
      <%= f.label :description%>
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="row-fluid">
    <% if @area.id %>
     <%= content_tag :div, :id => 'edit-map', :data => {:id=>@area.id} do %>
        <h2>Edit The Map</h2>
        <div id="map-canvas">
        </div>
     <% end %>
    <% else %>
     <div id = "new-map" >
      <p>Help us out by drawing an outline of this area. Click on the map to set the points. You can remove a point by right clicking. When you're done the area should fill in green. 
        </p>
        <div id = "map-canvas">
        </div>
      </div>
    <% end %>
     

 

  <div class="row-fluid">
    <div class="actions center area-submit">
        <%= f.submit(:value => 'Add Area', :class=>'btn') %>
    </div>
  </div>

<% end %>
