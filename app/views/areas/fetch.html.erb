<div id = "areas" class = "container-fluid no-padding">
  <h1>
    The best area to stay in 
    <span id = "city-name"><%= @city %></span> 
    is 
  </h1>
  <div id="search-results">
    <%= render 'list' %>
    <div class="row-fluid">
      <span id = "more-areas" class="span3 offset9">see more areas</span>
    </div>
  </div>

  <div id="area-description" class="span10 center">
    <%= @first.description %>
  </div>

  <div id="map">
    <h2>The Map</h2>
    <div id="map-canvas">
    </div>
  </div>
</div>