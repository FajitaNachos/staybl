<div id="contact-modal" class="modal fade contact-us" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">Contact Us</h4>
            </div>
            <%= form_for @contact, :html => { :id => 'contact-form' }, remote: true do |f| %>
            <div class="modal-body">
                <div class = "error_container"></div>
                    <div class = "row">
                        <div class = "form-group col-sm-6">
                            <label> Your Name </label>
                            <%= f.text_field :name, :class => "form-control input-md", :required => true %>
                        </div>
                        <div class = "form-group col-sm-6">
                            <label> Email Address </label>
                            <%= f.text_field :email, :class => "form-control input-md", :required => true %>
                        </div>
                    </div>

                    <div class = "row">
                        <div class = "form-group col-sm-12">
                            <label> Message </label>
                            <%= f.text_area :message, :class => "form-control message-body input-md", :required => true %>
                        </div>
                    </div>

                    <div class= "hide">
                    <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
                    </div>
            </div>
            <div class="modal-footer">
                    <button type = "button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    <%= f.submit 'Send', :class=> "btn btn-primary contact-button" %>
            </div>
            <% end %>
        </div>
    </div>
</div>
