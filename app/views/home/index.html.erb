<div id = "home-container" class = "container-fluid no-padding">
  <div id = "home-hero" class= "hero-unit">

    <h1 class = "pull-left">Find the best area to <span class ="stay">stay</span></h1>
    <div id = "search-bar" class="row-fluid">
        <form action = "<%= search_path %>" method = "get" id= "home-search">
          <div class="span10">
        <%= text_field_tag(:city, nil, :placeholder => 'Enter a city') %>
         </div>
         <div class="span2">
        <%= submit_tag("Search" , :name => nil, :class => "search-submit btn", :id=>"Search") %>
        </div>
        </form>
    </div>
    
  </div>

   <%= render 'layouts/footer' %>
</div>