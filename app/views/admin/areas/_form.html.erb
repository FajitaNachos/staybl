<%= form_for ([:admin,@admin_area]) do |f| %>
  <% if @admin_area.errors.any? %>
    <div class = "row">
      <div id="error-box" class = "col-md-6 ">
        <h2>It seems we have a problem.</h2>

        <% @area.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class = "form-group col-sm-4">
      <label> Area Name </label>
      <%= f.text_field :name, :placeholder => " ", :class => "form-control input-lg" %>
    </div>
    <div class = "form-group col-sm-4">
      <label>City</label>
      <%= f.text_field :city, :value => @admin_city, :class => "form-control input-lg" %>
    </div>
    <div class = "form-group col-sm-4">
      <label> State </label>
      <%= f.text_field :state, :value => @admin_state, :class => "form-control input-lg"  %>
    </div>
    <div class = "form-group col-sm-12">
      <label> Geometry </label>
      <%= f.text_field :the_geom, :value => @admin_area.the_geom, :class => "form-control input-lg" %>
      </div>

      <div class= "form-group col-sm-12">
        <label> Description </label>
        <%= f.text_area :description, :placeholder => " ", :class => "form-control input-lg" %>
      </div>
  </div>

  <div class = "row">
    <div class = "col-sm-12">
     <%= content_tag :div, :id => 'map', :class=>'editable-map', :data =>{:map_id=>@admin_area.id, :state =>@admin_state, :city => @admin_city} do %>
        <div id = "map-canvas">
        </div>
      <%end%>
    <div>
  </div>
  

  <div class="row">
    <div class="col-sm-12 buttons-container area-submit">
        <%= f.submit(:value => 'Save This Area', :class=>'btn btn-primary btn-lg') %>
    </div>
  </div>

<% end %>
